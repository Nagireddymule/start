<div class="row">
<%= form_for @invoice, html: {class: 'form-horizontal'} do |f| %>
                                                                          <!--f=form -->
  <% if @invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
      <% invoice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :date, class: 'control-label' %><br>
    <div class="controls">
      <%= f.datetime_select :date, id: :invoice_date %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :company, class: 'control-label' %><br>
    <div class="controls">
      <%= f.text_field :company, id: :invoice_company %>
    </div>  
  </div>

  <div class="control-group">
    <%= f.label :tax, class: 'control-label' %><br>
    <div class="controls">
      <%= f.text_field :tax, id: :invoice_tax %>
    </div>  
  </div>

  <div class="control-group">
    <%= f.label :salesperson, class: 'control-label' %><br>
    <div class="controls">
      <%= f.text_field :salesperson, id: :invoice_salesperson %>
    </div>  
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit 'submit', class: 'btn btn-default'%>
    </div>  
  </div>
</div>  
<% end %>
